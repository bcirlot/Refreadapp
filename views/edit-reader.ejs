<div class="container mt-5">
    <h1>Edit Reader</h1>
    
    <form action="/edit-reader/<%= readerId %>" method="POST">
        <div class="form-group">
            <label for="readerName">Reader Name</label>
            <input type="text" name="readerName" id="readerName" class="form-control" value="<%= readerName %>" required>

    <label for="ageRange">Age Range:</label>
    <select name="ageRange" required>
        <option value="0-5" <%= ageRange === '0-5' ? 'selected' : '' %>>0-5</option>
        <option value="6-11" <%= ageRange === '6-11' ? 'selected' : '' %>>6-11</option>
        <option value="12-18" <%= ageRange === '12-18' ? 'selected' : '' %>>12-18</option>
        <option value="19-35" <%= ageRange === '19-35' ? 'selected' : '' %>>19-35</option>
        <option value="36-55" <%= ageRange === '36-55' ? 'selected' : '' %>>36-55</option>
        <option value="56-100" <%= ageRange === '56-100' ? 'selected' : '' %>>56-100</option>
    </select>

    <label for="gender">Gender:</label>
    <select name="gender" required>
        <option value="male" <%= gender === 'male' ? 'selected' : '' %>>Male</option>
        <option value="female" <%= gender === 'female' ? 'selected' : '' %>>Female</option>
        <option value="undefined" <%= gender === 'undefined' ? 'selected' : '' %>>Undefined</option>
    </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Update Reader</button>
        <a href="/manage" class="btn btn-secondary">Cancel</a>
    </form>
</div>