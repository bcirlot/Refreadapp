<div class="container mt-5">
    <h1>Edit Reader</h1>
    
    <form action="/edit-reader/<%= readerId %>" method="POST">
        <div class="form-group">
            <label for="readerName">Reader Name</label>
            <input type="text" name="readerName" id="readerName" class="form-control" value="<%= readerName %>" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Update Reader</button>
        <a href="/manage" class="btn btn-secondary">Cancel</a>
    </form>
</div>