<!-- <h1><%= book %> <%= chapter %></h1> -->
<div class="audio-player">
    <audio controls>
        <source src="<%= audioUrl %>" type="audio/mp3">
        Your browser does not support the audio element.
    </audio>
</div>
<div class="bible-chapter">
    <%- passageHTML %>
</div>
<!-- Mark as Read Button -->
<form action="/mark-chapter-read" method="POST" onsubmit="disableButton(this);">
    <input type="hidden" name="bookName" value="<%= book %>">
    <input type="hidden" name="chapter" value="<%= chapter %>">
    <button type="submit" class="btn btn-primary mt-3">Mark as Read</button>
</form>

<script>
function disableButton(form) {
    const button = form.querySelector('button');
    button.disabled = true;
    button.innerHTML = 'Processing...'; // Optional: Change the button text
}
</script>