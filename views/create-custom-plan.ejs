<h2>Create a Custom Reading Plan</h2>
<form action="/create-custom-plan" method="POST">
    <div class="form-group">
        <label for="planName">Plan Name:</label>
        <input type="text" id="planName" name="planName" required class="form-control">
    </div>

    <div class="form-group">
        <label>Select Chapters:</label>
        <div>
            <% chapters.forEach(function(chapter) { %>
                <div>
                    <input type="checkbox" name="chapters" value="<%= chapter.id %>">
                    <%= chapter.book %> Chapter <%= chapter.chapter %>
                </div>
            <% }) %>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Plan</button>
</form>
