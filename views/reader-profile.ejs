<div class="profile">
    <div class="row align-items-center">
        <!-- Profile Image on the Left -->
        <div class="col-auto">
            <div class="profile-image">
                <img src="/ml<%= currentLevelId ? currentLevelId : 1 %>.webp" alt="Level Image" class="img-fluid rounded-circle" style="width: 150px;">
            </div>
        </div>

        <!-- Name and Badge on the Right, but left-aligned -->
        <div class="col">
            <h1 class="mb-0"><%= readerName %>'s Profile</h1>
            <span class="badge badge-success"><%= level %></span>
            <p>Total Points: <%= readerTotalPoints %></p>
        </div>
    </div> 
    <div class="container my-5">
        <h3 class="mb-4 text-center">Reader Tools</h3>
        <div class="btn-group d-flex justify-content-center mb-4" role="group" aria-label="Reader Tools">
            <a href="/reader-progress" class="btn btn-primary btn-lg mx-2">View Progress</a>
            <a href="/record" class="btn btn-success btn-lg mx-2">Record Chapters</a>
            <a href="/record-by-book" class="btn btn-info btn-lg mx-2">Record Books</a>
        </div>
        <div class="d-flex justify-content-center">
            <a href="/quiz" class="btn btn-warning btn-lg w-100">Take Quiz</a> <!-- Full-width button -->
        </div>
    
        <div class="profile-referral text-center my-4">
            <p>Share this link with others to earn 25 points:</p>
            <div class="d-inline-block w-100 d-sm-flex justify-content-center">
                <input type="text" class="form-control w-50 d-inline mb-2 mb-sm-0" value="<%= protocol %>://<%= host %>/register?ref=<%= referralToken %>" readonly>
                <button class="btn btn-primary ml-2" onclick="copyReferralLink()">Copy</button>
            </div>
        </div>
    
        <div class="text-center mt-4">
            <a href="/referrals" class="btn btn-info btn-lg">View Referrals</a>
        </div>
    </div>
    
  
    
    
    <!-- <span class="badge badge-success"><%= level %></span> -->
    
    <!-- Progress bar toward the next level -->
    <div class="mt-4">
        <h4>Progress to Next Level</h4>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: <%= progressPercentage %>%;" aria-valuenow="<%= progressPercentage %>" aria-valuemin="0" aria-valuemax="100">
                <%= progressPercentage %>%
            </div>
        </div>
        <p><%= readerTotalPoints %> / <%= nextLevelPoints %> points</p>
    </div>
    <h3>Current Level: <%= level %></h3>
    <div class="mt-4">
        <p><%= levelDescription %></p>
    </div>
    <div class="profile-image">
        <img src="/ml<%= currentLevelId ? currentLevelId : 1 %>.webp" alt="Level Image" class="img-fluid">
    </div>
    
    
</div>
<script>
    function copyReferralLink() {
        const copyText = document.querySelector('.profile-referral input');
        copyText.select();
        document.execCommand('copy');
        alert("Referral link copied: " + copyText.value);
    }
</script>

