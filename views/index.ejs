
    <div id="maincontent" class="text-center">  
        <h2>Total Chapters Read: <%= totalChaptersRead %></h2>
        <h4>Goal: 10,000 Chapters</h4>
            <div class="progress my-4">
                <div class="progress-bar bg-success" role="progressbar" style="width: <%= (totalChaptersRead / 10000) * 100 %>%;" aria-valuenow="<%= totalChaptersRead %>" aria-valuemin="0" aria-valuemax="10000">
                    <%= Math.round((totalChaptersRead / 10000) * 100) %>%
                </div>
            </div>
        <h2>Full Bibles Read: <%= completions %></h2>
            <div class="progress my-4">
                <div class="progress-bar bg-success" role="progressbar" style="width: <%= progressPercentage %>%;" aria-valuenow="<%= totalChaptersRead %>" aria-valuemin="0" aria-valuemax="10000">
                    <%= progressPercentage %>%
                </div>
            </div>
        <h4>Chapters remaining: <%= totalBibleChapters - remainingChaptersForNextCompletion %></h4>
        <div class="my-4">
            <a href="/bible-progress" class="btn btn-primary">View Bible Progress</a>
        </div>
            <% if (isLoggedIn) { %>
                <h2>Chapter Counts by Reader</h2>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Reader Name</th>
                            <th>Total Chapters</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% readerCounts.forEach(function(row) { %>
                            <tr>
                                <td><%= row.reader_name %></td>
                                <td><%= row.chapter_count %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>

